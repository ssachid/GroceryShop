<% obj.each do |product| %>
  <div class="row">
    <div class="col-md-2">
      <section class="center">
        <%= image_tag(product.image, :size => "160x160", class: "img-circle avatar avatar-original", style: "-webkit-user-select:none;
              display:block; margin:auto;" ) %>
      </section>
    </div>
    <div class="col-md-8 well">
      <h4><%= product.name %></h4>
      <p>$ <%= product.price %>/unit</p>
      <p><%= truncate(product.description, length: 300) %>/unit</p>
      <% if logged_in? %>
          <% if current_user.admin? %>
            <div class="product-actions">
              <%= link_to "Edit this product", '#', disabled: true, class: "btn btn-xs btn-warning" %>
              <%= link_to "Delete this product", '#', disabled: true, method: :delete,
                                                data: { confirm: "Are you sure you want to delete this product?" },
                                                class: "btn btn-xs btn-danger" %>
            </div>
          <% end %>
          <div class="product-actions pull-right">
            <%= link_to "Add to Cart", '#', disabled: true, class: "btn btn-sm btn-primary" %>
          </div>
      <% end %>
    </div>
  </div>
<% end %>
