<div class="jumbotron">
  <% if current_user %>
    <h2 align="center" class="display-3">Hello <%= current_user.first_name.capitalize %>!</h1>
  <% end%>
  <h2 align="center" class="display-3">Welcome to Shipt online grocery service!</h1>
  <hr class="my-4">
  <p></p>
  <% if logged_in? %>
     <p align="center" class="lead">
      <%= link_to "Look up Products", products_path, class: "btn btn-danger btn-lg btn-xlarge" %>
    </p>
  <% else %>
    <p align="center" class="lead">
      <%= link_to "Sign up", signup_path, class: "btn btn-danger btn-lg btn-xlarge" %>
    </p>
  <% end %>
</div>

