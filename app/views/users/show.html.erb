<br>
<div class="container">
  <div class="row">
    <div class="col-md-9 centering">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="row">
            <div class="col-md-12 lead">Your profile<hr></div>
          </div>
          <div class="row">
      <div class="col-md-4 text-center">
              <img class="img-circle avatar avatar-original" style="-webkit-user-select:none;
              display:block; margin:auto;" src="http://robohash.org/sitsequiquia.png?size=120x120">
            </div>
            <div class="col-md-8">
              <div class="row">
                <div class="col-md-12">
                  <h1 class="only-bottom-margin"><%= @user.first_name.capitalize %></h1>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <span class="text-muted">Email:</span> <%= @user.email %><br>
                  <small class="text-muted">Created: <%= time_ago_in_words(@user.created_at) %></small>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <hr><%= link_to edit_user_path(current_user), class: "btn btn-default pull-right" do %>
                <i class="glyphicon glyphicon-pencil"></i> Edit
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
